@{
    Validation.RequireField("txtName", "Name is Required");


    Validation.RequireField("txtLastName", "LastName Required");
    if (IsPost)
    {
        string name = Request["txtName"];
        string lastName = Request["txtLastName"];

        if (Validation.IsValid())
        {
            <p>
                Name: @name<br />
                LastName : @lastName
            </p>
        }

    }

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <title></title>
</head>
<body>
    <div class="container">
        <!-- de esta manera enviamos los datos los va a recibir este mismo archivo, para ello se usa reyzor-->
        <form method="post" action="">
            <div class="form-group">
                <label for="txtName">Name</label>
                <input class="form-control" type="text" name="txtName"/>
                @Html.ValidationMessage("txtName")
            </div>
           
            <div class="form-group">
                <label for="txtLastName">Last Name</label>
                <input class="form-control" type="text" name="txtLastName" />
                @Html.ValidationMessage("txtLastName")
            </div>
          
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit" name="btnSend" />
            </div>
        </form>
    </div>
</body>
</html>
